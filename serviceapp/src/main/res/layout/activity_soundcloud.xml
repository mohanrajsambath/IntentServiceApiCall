    <TableLayout
        android:id="@+id/tbl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp">

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent">

            <TextView
                android:id="@+id/tV_lbl_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.125"
                android:elevation="24dp"
                android:text="Version"
                tools:textColor="@android:color/holo_green_dark"
                tools:textStyle="bold"/>
            <TextView
                android:id="@+id/tV_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:text="version"/>

        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tV_lbl_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.125"
                android:elevation="24dp"
                android:text="Type"
                tools:textColor="@android:color/holo_green_dark"
                tools:textStyle="bold"/>
            <TextView
                android:id="@+id/tV_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1" android:text="type"/>

        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tV_lbl_provider_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp" android:layout_weight="0.125"
                android:elevation="24dp"
                android:text="Provider_name"
                tools:textColor="@android:color/holo_green_dark"
                tools:textStyle="bold"/>
            <TextView
                android:id="@+id/tV_provider_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:elevation="24dp"
                android:text="provider_name"
            />
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tV_lbl_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp" android:layout_weight="0.125"
                android:elevation="24dp"
                android:text="Author_Name"
                tools:textColor="@android:color/holo_green_dark"
                tools:textStyle="bold"/>
            <TextView
                android:id="@+id/tV_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:text="author_name"/>
        </TableRow>
    </TableLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tbl_layout"
                    android:padding="5dp">
        <TextView
            android:id="@+id/tV_json_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for result"
            tools:ignore="HardcodedText"/>
    </RelativeLayout>
    <Button
        android:id="@+id/button_myRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Request"
        android:background="@android:color/holo_green_dark"
        tools:textColor="@android:color/background_light"
        android:layout_margin="20dp"
        android:elevation="14dp"/>


</RelativeLayout>
