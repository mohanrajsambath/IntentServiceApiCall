<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<TableLayout
		android:id="@+id/tbl_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_margin="16dp">

		<TableRow android:layout_width="match_parent"
				  android:layout_height="match_parent">

			<TextView
				android:id="@+id/tV_lbl_version"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:layout_marginRight="10dp"
				android:layout_weight="0.125"
				android:elevation="24dp"
				android:text="Version"
				tools:ignore="HardcodedText,RtlHardcoded"
				tools:textColor="@android:color/holo_green_dark" tools:textStyle="bold"/>
			<TextView
				android:id="@+id/tV_version"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:text="version" tools:ignore="HardcodedText"/>

		</TableRow>
		<TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
			<TextView
				android:id="@+id/tV_lbl_type"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:layout_marginEnd="10dp"
				android:layout_marginRight="10dp"
				android:layout_weight="0.125"
				android:elevation="24dp"
				android:text="Type"
				tools:ignore="HardcodedText,RtlHardcoded"
				tools:textColor="@android:color/holo_green_dark" tools:textStyle="bold"/>
			<TextView
				android:id="@+id/tV_type"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:layout_weight="1" android:text="type"
				tools:ignore="HardcodedText"/>

		</TableRow>
		<TableRow android:layout_width="match_parent"
				  android:layout_height="wrap_content">
			<TextView
				android:id="@+id/tV_lbl_provider_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:layout_marginEnd="10dp"
				android:layout_marginRight="10dp" android:layout_weight="0.125"
				android:elevation="24dp"
				android:text="Provider_name"
				tools:ignore="HardcodedText,RtlHardcoded"
				tools:textColor="@android:color/holo_green_dark" tools:textStyle="bold"/>
			<TextView
				android:id="@+id/tV_provider_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:elevation="24dp"
				android:text="provider_name"
				tools:ignore="HardcodedText"/>
		</TableRow>
		<TableRow android:layout_width="match_parent"
				  android:layout_height="wrap_content">
			<TextView
				android:id="@+id/tV_lbl_author_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:layout_marginEnd="10dp"
				android:layout_marginRight="10dp" android:layout_weight="0.125"
				android:elevation="24dp"
				android:text="Author_Name"
				tools:ignore="HardcodedText,RtlHardcoded"
				tools:textColor="@android:color/holo_green_dark" tools:textStyle="bold"/>
			<TextView
				android:id="@+id/tV_author_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:text="author_name" tools:ignore="HardcodedText"/>
		</TableRow>
	</TableLayout>
	<RelativeLayout
        android:id="@+id/rl_result_1"
        android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/tbl_layout"
					android:padding="5dp"
                    android:background="@android:color/holo_blue_bright">
		<TextView
			android:id="@+id/tV_json_result_1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Waiting for result"
			tools:ignore="HardcodedText"/>
	</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_result_2"
        android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_result_1"
                    android:padding="5dp"
                    android:background="@android:color/holo_blue_dark">
        <TextView
            android:id="@+id/tV_json_result_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for result"
            tools:ignore="HardcodedText"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_result_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_result_2"
        android:padding="5dp"
        android:background="@android:color/holo_blue_light">
        <TextView
            android:id="@+id/tV_json_result_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for result"
            tools:ignore="HardcodedText"/>
    </RelativeLayout>
	<Button
		android:id="@+id/GetServerData"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_margin="20dp"
		android:background="@android:color/holo_green_dark"
		android:elevation="14dp"
		android:text="Click To Get Server Data"
		tools:ignore="HardcodedText" tools:textColor="@android:color/background_light"/>


</RelativeLayout>